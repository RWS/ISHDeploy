<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Build>$([MSBuild]::Add($([MSBuild]::Multiply(1200, $([MSBuild]::Subtract($([System.DateTime]::UtcNow.Year), 2015)))), $([MSBuild]::Add($([MSBuild]::Multiply(100, $([System.DateTime]::UtcNow.Month))),$([System.DateTime]::UtcNow.Day)))))</Build>
    <AdvBuild>$([System.DateTime]::UtcNow.ToString("HHmm"))</AdvBuild>
    <Revision>0</Revision>
    <ModuleVersion>$(Major).$(Minor).0.$(Revision)</ModuleVersion>
    <ModuleBuildVersion>$(Major).$(Minor).$(Build).$(Revision)</ModuleBuildVersion>
    <ProductName>ISHDeploy</ProductName>
    <ModuleName>$(ProductName).$(SupportedCMVersion)</ModuleName>
    <ModuleTitle>SDL Trisoft $(ModuleName)</ModuleTitle>
    <ModuleDescription>Deployment automation module for SDL $(MarketingReleaseName) Content Manager $(SoftwareCMVersion) (LiveContent Architect, Trisoft InfoShare)</ModuleDescription>
    <ModuleCompany>SDL plc</ModuleCompany>
    <ModuleProduct>SDL Knowledge Center $(ModuleName)</ModuleProduct>
    <ModuleCopyright>SDL plc. All rights reserved.</ModuleCopyright>
    <ModuleGuid>68ae5b26-edc0-453a-a720-ecc99d9b603e</ModuleGuid>
    <DocPortalLink>https://sdl.github.io/$(ProductName)/$(SupportedCMVersion)/</DocPortalLink>
  </PropertyGroup>
  <Choose>
    <When Condition=" '$(Configuration)' != 'Release-Publish' ">
      <PropertyGroup>
        <ModuleManifestVersion>$(Major).$(Minor).$(Build)$(AdvBuild).$(Revision)</ModuleManifestVersion>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <ModuleManifestVersion>$(Major).$(Minor)</ModuleManifestVersion>
      </PropertyGroup>
    </Otherwise>
  </Choose>
</Project>